<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/hc_image_container"
	android:layout_width="@dimen/hc_max_message_elements_wight"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="#8893BF"
	android:layout_marginBottom="5dp">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<Space
			android:id="@+id/name_space"
			android:layout_width="match_parent"
			android:layout_height="@dimen/hc_small_text_space"
			android:visibility="gone" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/hc_image"
			android:layout_width="@dimen/hc_max_message_elements_wight"
			android:layout_height="wrap_content"
			android:scaleType="centerCrop"
			tools:layout_height="400dp"
			tools:src="@drawable/ic_launcher_foreground" />

	</LinearLayout>

	<FrameLayout
		android:id="@+id/hc_progress_bar_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:visibility="gone"
		tools:visibility="visible">

	</FrameLayout>

</FrameLayout>
